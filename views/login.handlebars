<form class="login-form">
<div class="form-group">
  <label for="email-login" class="form-label mt-4">Email address</label>
  <input type="email" class="form-control" id="email-login" aria-describedby="emailHelp"
    placeholder="Enter email">
</div>
<div class="form-group">
  <label for="password-login" class="form-label mt-4">Password</label>
  <input type="password" class="form-control" id="password-login" placeholder="Password">
</div>
<div>
    <button type="submit" class="btn btn-dark">login</button>
  </div>
</form>

<form class="signup-form">
<div class="form-group">
  <label for="username-signup" class="form-label mt-4">Username</label>
  <input type="email" class="form-control" id="username-signup" aria-describedby="emailHelp"
    placeholder="Enter email">
</div>
<div class="form-group">
  <label for="email-signup" class="form-label mt-4">Email address</label>
  <input type="email" class="form-control" id="email-signup" aria-describedby="emailHelp"
    placeholder="Enter email">
  <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
</div>
<div class="form-group">
  <label for="password-signup" class="form-label mt-4">Password</label>
  <input type="password" class="form-control" id="password-signup" placeholder="Password">
    <small id="emailHelp" class="form-text text-muted">Must be at least 6 characters long</small>
</div>
<div>
    <button type="submit" class="btn btn-dark">Signup</button>
  </div>
</form>



<script src="/javascript/login.js"></script>